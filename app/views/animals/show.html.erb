<div class="zooName"><h1><%= @animal.zoo.name %></h1></div>
<a href="#" class="js-next" data-id="<%= @animal.id %>" zoo-data-id="<%= @animal.zoo_id %>">Next Animal...</a>
<h1 class="animalName"><%= @animal.name %> the <%= @animal.species %></h1>
<p class="animalPersonality">Personality: <%= @animal.personality %></p>

<p>Notes: </p>
<div class="comments"> 
  <%= render 'comments/comments' %>
</div>

<%= link_to "Edit this Animal", edit_user_animal_path(current_user, @animal) %><br><br>

  <h2><%= "Add a note for #{@animal.name}!" %></h2>

  <%= form_for ([current_user, @animal, @comment]) do |f| %>
    <%= f.hidden_field :animal_id, value: @animal.id %>
    <%= f.text_area :notes %>
    <p><%= f.submit "Add Note", data: { disable_with: false } %></p>
  <% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $('#new_comment').on('submit', function(e) {
      e.preventDefault();
      url = this.action
      console.log(url)

      data = {
        'authenticity_token': $("input[name='authenticity_token']").val(),
        'comment': {
          'notes': $("#comment_notes").val()
        }
      };

      $.ajax({
        type: "POST",
        url: url,
        data: data,
        success: function(response){
          $("#comment_notes").val("");
          let $ol = $("div.comments ol");
          $ol.append(response);
        }
      });
    });
  });
</script>
