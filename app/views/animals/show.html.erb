<h1><%= @animal.name %></h1>
    <ul>
        <li>Species: <%= @animal.species %></li>
        <li>Personality: <%= @animal.personality %></li>
        <li>Notes: </li>
            <% @animal.comments.each do |comment| %>
            <ul>
                <li><%= comment.notes %></li>
            </ul>
            <% end %>
    </ul><br>

<%= link_to "Edit this Animal", edit_user_animal_path(current_user, @animal) %><br>

    <h2><%= "Add a note for #{@animal.name}!" %></h2><br>

    <%= form_for ([current_user, @animal, Comment.new]) do |f| %>
        <%= f.hidden_field :animal_id, value: @animal.id %>
        <%= f.label :notes %><br>
        <%= f.text_area :notes %>
        <%= f.submit "Add Note" %>
    <% end %>
    
