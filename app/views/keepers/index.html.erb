<h1>List of Zoo Keepers in <%= link_to  "#{current_user.zoo.name}", zoo_path(@zoo) %></h1>
<% if current_user.zoo.keepers.empty? %>
    <p>Oh no, you have no Zoo Keepers!</p>
    <%= link_to "Add a New Zoo Keeper", new_zoo_keeper_path %>
<% else %>
    <% current_user.zoo.keepers.each do |keeper| %>
        <ul>
            <h2><%= link_to "#{keeper.name}", keeper_path(keeper) %></h2>
            <li>Works at: <%= keeper.zoo.name %></li><br />
        </ul>
    <% end %>
    <% if @zoo.keeper_capacity_reached? %>
        <p></p>
    <% else %>
        <%= link_to "Add a New Zoo Keeper", new_zoo_keeper_path %>
    <% end %>
<% end %>