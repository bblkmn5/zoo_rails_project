<h1>Welcome to the Zoo Database!</h1>
    <% if session[:user_id] %>
        <h2><%= @user.name %></h2>
        <h3>Email: <%= @user.email %></h3>
        <h3>Facebook UID: <%= @user.uid %></h3>
    <% else %>
        <%= link_to "Sign Up", new_user_path %><br>
        <%= link_to('Log in with Facebook!', '/auth/facebook') %><br>
        <%= link_to('Log in with Github!', '/auth/github') %><br>
        <%= link_to "Sign In", new_user_session_path %>
    <% end %>
