
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user do |f| %>
            <%= f.label :username %>:
            <%= f.text_field :username, class: "form-control" %><br>

            <%= f.label :email %>:
            <%= f.email_field :email, class: "form-control" %><br>

            <%= f.label :password %>:
            <%= f.password_field :password, class: "form-control" %><br>

            <%= f.label :zoo_id %> <strong>You Own:</strong>
            <%= f.text_field :zoo_id, class: "form-control" %><br>

            <%= f.submit class: "btn btn-primary" %><br>
        <% end %>

        <p>Already a user? <%= link_to "Log In", login_path %></p>
    </div>
</div>